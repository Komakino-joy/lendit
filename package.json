{
  "name": "lendit-application",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "concurrently --kill-others-on-fail \"npm run server\" \"npm run client\"",
    "client-packages" : "cd client && npm install",
    "server-packages" : "cd server && npm install",
    "client": "cd client && npm start",
    "server": "cd server && node asset-tracker-server.js",
    "start": "npm run client-packages && npm run server-packages",
    "poststart" : "npm run build"
    "install-packages" : "npm install --prefix client && npm install --prefix server",
    "postinstall-packages": "npm run build",
    "build": "cd client && npm run build",
    "postbuild": "NPM_CONFIG_PRODUCTION=false cd server && node asset-tracker-server.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Komakino-joy/lendit-application.git"
